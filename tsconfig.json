{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "meteor",
      "googlemaps"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "paths": {
      "api/*": [
        "./api/server/*"
      ]
    }
  },
  "include": [
    "client/**/*.ts",
    "api/server/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
